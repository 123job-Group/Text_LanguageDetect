<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE package SYSTEM "http://pear.php.net/dtd/package-1.0">
<package version="1.0">

    <!-- $Id: package.xml,v 1.10 2008-07-30 19:26:23 taak Exp $ -->

    <name>Text_LanguageDetect</name>
    <summary>Language detection class</summary>
    <description>Text_LanguageDetect can identify 52 human languages from text samples and return confidence scores for each.</description>

    <maintainers>
        <maintainer>
            <user>taak</user>
            <name>Nicholas Pisarro</name>
            <email>taak@php.net</email>
            <role>lead</role>
        </maintainer>
    </maintainers>

    <release>
        <version>0.2.3</version>
        <date>2008-07-30</date>
        <license>BSD</license>
        <state>alpha</state>
        <notes>
            Updated package requirements
        </notes>

        <filelist>
            <file role="php" name="Text/LanguageDetect.php">
                <replace from="@package_version@" to="version" type="package-info" />
                <replace from="@data_dir@" to="data_dir" type="pear-config" />
            </file>
            
            <dir role="php" name="Text/LanguageDetect">
                <file role="php" name="Parser.php">
                    <replace from="@package_version@" to="version" type="package-info" />
                </file>
            </dir>

            <file role="data" name="data/lang.dat" install-as="lang.dat" />
            <file role="data" name="data/unicode_blocks.dat" install-as="unicode_blocks.dat" />
            <file role="test" name="tests/unittest.php"/>
            <file role="doc" name="docs/example_clui.php"/>
            <file role="doc" name="docs/example_web.php"/>
        </filelist>

        <deps>
            <dep type="php" rel="ge" version="4.3" />
            <dep type="ext" rel="has" optional="no">pcre</dep>
            <dep type="ext" rel="has" optional="yes">mbstring</dep>
        </deps>

    </release>

    <changelog>
        <release>
            <version>0.2.3</version>
            <date>2008-07-30</date>
            <license>BSD</license>
            <state>alpha</state>
            <notes>
                updated package requirements
            </notes>
        </release>
        <release>
            <version>0.2.2</version>
            <date>2008-07-30</date>
            <license>BSD</license>
            <state>alpha</state>
            <notes>
                * Fixed Bug #13385    
            </notes>
        </release>
        <release>
            <version>0.2.1</version>
            <date>2006-12-03</date>
            <license>BSD</license>
            <state>alpha</state>
            <notes>
                * Fix: Now uses conventionalized include path
                * Fix: Won't cause error if input is purely symbol-range characters
                * Better error reporting if error in unicode db loading
            </notes>
        </release>
        <release>
            <version>0.2.0</version>
            <date>2006-01-18</date>
            <license>BSD</license>
            <state>alpha</state>
            <notes>
                * Added unicode block range identification
                * unicode block ranges used to optimize language detection by pre-selecting which known language trigram profiles in the database to attempt comparison with
                * Added several utf8/unicode utility functions
                * new Parser class for building data profiles from text samples
                * Fix: mb_convert_encoding() now used correctly
                * Fix: basic case-folding for Cyrillic alphabet implemented
            </notes>
        </release>
        <release>
            <version>0.1.1</version>
            <date>2006-01-06</date>
            <license>BSD</license>
            <state>alpha</state>
            <notes>
                * Output of clustering now cached
                * Fix: better error checking in clustering functions
                * Fix: clusteredSearch() now handles null strings gracefully
                * Compare order is preserved in clusteredSearch() results
                * Slight speed improvement to utf8 iterator
            </notes>
        </release>
        <release>
            <version>0.1.0</version>
            <date>2006-01-04</date>
            <license>BSD</license>
            <state>alpha</state>
            <notes>Initial PEAR release</notes>
        </release>
    </changelog>
</package>
